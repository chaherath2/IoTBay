<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>controller.ConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validator</servlet-name>
        <servlet-class>controller.Validator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>controller.Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOrder</servlet-name>
        <servlet-class>controller.DeleteOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayCompletedOrderServlet</servlet-name>
        <servlet-class>controller.DisplayCompletedOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShippingOrderDetailsServlet</servlet-name>
        <servlet-class>controller.ShippingOrderDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerCartServlet</servlet-name>
        <servlet-class>controller.CustomerCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerOrderServlet</servlet-name>
        <servlet-class>controller.CustomerOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Payment_CreateOrderServlet</servlet-name>
        <servlet-class>controller.Payment_CreateOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validator</servlet-name>
        <url-pattern>/Validator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrder</servlet-name>
        <url-pattern>/DeleteOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayCompletedOrderServlet</servlet-name>
        <url-pattern>/DisplayCompletedOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShippingOrderDetailsServlet</servlet-name>
        <url-pattern>/ShippingOrderDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/CustomerCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerOrderServlet</servlet-name>
        <url-pattern>/CustomerOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Payment_CreateOrderServlet</servlet-name>
        <url-pattern>/Payment_CreateOrderServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
